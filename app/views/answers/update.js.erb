<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('#answer-' + '<%= @answer.id %> >div').html('<%= @answer.body %>');
  $('form#edit-answer-' + '<%= @answer.id %>').hide();
  // does not look good, but works.. probably have to be refactored
  $('#answer-'+ '<%= @answer.id %>').find("a").show();
<% end %>
